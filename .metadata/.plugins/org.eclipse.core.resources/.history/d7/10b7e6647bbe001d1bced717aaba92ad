package tiposDeDados;

public class TipoInt {

	public static void main(String[] args) {
		// int é um tipo de dado que armazena valores inteiros, em até 32 bits.
		
				int idade;
				idade = 37;
				
				//Aqui, declaramos a nossa variável “idade” sendo do tipo int (inteiro)
					// Depois, atribuímos o valor 37 (através do = de atribuição) à variável 
				// Também podemos declarar as nossas variáveis e inserir o seu valor inicial na mesma linha, exemplo:
				
				// Também podemos declarar as nossas variáveis e inserir o seu valor inicial na mesma linha, exemplo:
				int idadeValorDireto = 37;
				// Criamos uma variavel int, que tem nome “idade” e recebe o valor 37.
				System.out.println(idade);
			}
	}

